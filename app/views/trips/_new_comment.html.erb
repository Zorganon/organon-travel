<div class="container">
  <% if signed_in? %>
    <h4>Tell us about your trip!</h4>
    <%= form_for([@trip, @trip.comment.build]) do |f| %>
      <p>
        <%= f.label :body, "Highlights" %><br>
        <%= f.text_area :body %>
      </p>
      <p>
        <%= f.submit "Submit" %>
      </p>
    <% end %>
  <% end %>
  
</div>